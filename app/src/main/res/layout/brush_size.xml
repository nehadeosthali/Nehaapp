<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/brush_small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:layout_marginTop="53dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/brush_medium"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/brush_large"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="3dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/brush"
        app:layout_constraintEnd_toStartOf="@+id/brush_medium"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/brush_medium"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="3dp"
        android:layout_marginTop="41dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/brush"
        app:layout_constraintEnd_toStartOf="@+id/brush_small"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/brush_large"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>